<Window x:Class="Source_Downloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Source_Downloader"
        mc:Ignorable="d"
        Title="Source Downloader"
        Height="109.804"
        Width="525"
        ResizeMode="NoResize"
    >
    <Grid>
        <TextBlock
            x:Name="textBlock"
            HorizontalAlignment="Left"
            Margin="10,10,0,0"
            TextWrapping="Wrap"
            Text="URL"
            VerticalAlignment="Top"
            FontSize="16"
            Height="22"
        />
        <TextBox
            x:Name="downloadUrl"
            HorizontalAlignment="Left"
            Height="22"
            Margin="43,10,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="384"
            AcceptsReturn="True"
            Text="http://stackoverflow.com/questions/8397060/how-to-open-multiple-connections-to-download-single-file"
        />
        <Button
            x:Name="bDownload"
            Content="Download"
            HorizontalAlignment="Left"
            Margin="432,10,0,0"
            VerticalAlignment="Top"
            Width="75" Click="bDownloadClick"
        />
        <ProgressBar
            x:Name="downloadProgress"
            HorizontalAlignment="Left"
            Height="11"
            Margin="10,37,0,0"
            VerticalAlignment="Top"
            Width="497"
            Visibility="Hidden"
        />
        <TextBlock
            x:Name="calculationResultTitle"
            HorizontalAlignment="Left"
            Margin="10,53,0,0"
            TextWrapping="Wrap"
            Text="Total No of Divs - "
            VerticalAlignment="Top"
            Visibility="Hidden"
        />
        <TextBlock
            x:Name="calculationResultValue"
            HorizontalAlignment="Left"
            Margin="112,53,0,0"
            TextWrapping="Wrap"
            Text="0"
            VerticalAlignment="Top"
            Visibility="Hidden"
        />
        <TextBlock
            x:Name="downloadTime"
            HorizontalAlignment="Left"
            TextAlignment="Right"
            Height="23"
            Margin="259,49,0,0"
            TextWrapping="Wrap"
            VerticalAlignment="Top"
            Width="248"
            Text="Download Time - 0 s"
            Visibility="Hidden"
        />
    </Grid>
</Window>
